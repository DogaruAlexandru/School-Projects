<UserControl x:Class="Tema3.MVVM.View.HomeroomTeacherUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tema3.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="DeepSkyBlue">
    
    <StackPanel
        HorizontalAlignment="Center"
        VerticalAlignment="Center">

        <Button
            Style="{StaticResource MyButtonTheme}"
            Content="Absente"
            Command="{Binding Absences}"/>

        <Button
            Style="{StaticResource MyButtonTheme}"
            Content="Medii"
            Command="{Binding Means}"/>

        <Button
            Style="{StaticResource MyButtonTheme}"
            Content="Ierarhie"
            Command="{Binding Top}"/>

        <Button
            Style="{StaticResource MyButtonTheme}"
            Content="In situatie de exmatriculare"
            Command="{Binding Expulsion}"/>
    </StackPanel>
</UserControl>
